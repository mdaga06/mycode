#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,s1=0,s2=0;
        cin>>n;
        if(n%3==0){
        s1=(n/3);
        s2=(n/3);
        }
        else if(n%3>1){
            s2=(n/3);
            s1=(n/3)+1;
        }
         else if(n%3==1){
            s2=(n/3)+1;
            s1=(n/3);
        }
        
        cout<<s2<<" "<<s1<<endl;
    }
    return 0;
    
    
}
